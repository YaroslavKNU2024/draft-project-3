@model IEnumerable<CoronavirusBase.Virus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VirusName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDiscovered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVirusGroupNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VirusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDiscovered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVirusGroupNavigation.IdGroup)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVirus">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdVirus">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVirus">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
